.PHONY: obj

_containers:
	gcc -c StackList.c     -o ../../obj/StackList.o
	gcc -c Border.c        -o ../../obj/Border.o

_clean:
	if [ -w ../../obj/StackList.o ] ; then     rm ../../obj/StackList.o; fi
	if [ -w ../../obj/Border.o ] ; then        rm ../../obj/Border.o; fi

all:
	make _clean
	make _containers
